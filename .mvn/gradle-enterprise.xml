<gradleEnterprise>
    <server>
        <url>https://ec2-3-239-164-203.compute-1.amazonaws.com</url>
        <allowUntrusted>true</allowUntrusted>
    </server>
    <buildScan>
        <publish>ALWAYS</publish>
        <backgroundBuildScanUpload>#{env['CI'] == null}</backgroundBuildScanUpload>
        <capture>
            <goalInputFiles>true</goalInputFiles>
        </capture>
    </buildScan>
    <buildCache>
        <local><enabled>false</enabled></local>
        <remote>
            <enabled>true</enabled>
            <storeEnabled>#{isTrue(env['CI'])}</storeEnabled>
            <server>
                <id>ge-liquibase</id>
                <url>https://ec2-3-239-164-203.compute-1.amazonaws.com/cache/</url>
                <allowUntrusted>true</allowUntrusted>
                <credentials>
                    <username>${env.GRADLE_ENTERPRISE_CACHE_USERNAME}</username>
                    <password>${env.GRADLE_ENTERPRISE_CACHE_PASSWORD}</password>
                </credentials>
            </server>
        </remote>
    </buildCache>
</gradleEnterprise>
